@font-face {
  font-family: 'Roboto';
  font-weight: normal;
  src: url('/static/font/Roboto-Regular.ttf') format('truetype');
}

@font-face {
  font-family: 'Roboto';
  font-weight: 700;
  src: url('/static/font/Roboto-Bold.ttf') format('truetype');
}

@font-face {
  font-family: 'Roboto';
  font-weight: 300;
  src: url('/static/font/Roboto-Light.ttf') format('truetype');
}

html
    font-size: 100%
    height: 100%
    
*,
*::before,
*::after
    box-sizing: border-box

body 
    display: flex
    flex-direction: column
    background-color: #fffbf4
    color: #444
    height: 100%
    font-family: Roboto,Helvetica,Arial,sans-serif
    font-size: 1rem
    font-weight: 400
    line-height: 1.5rem
    margin: 0
    -webkit-font-smoothing: antialiased
    -moz-osx-font-smoothing: grayscale
    
div#content
    margin-top: 4rem
    
h1, h2, h3, h4, h5, h6
    margin-top: 0
    margin-bottom: .5rem
    font-weight: 500
    line-height: 1.2rem
    letter-spacing: 1px
    
h2
    margin-bottom: 1rem
    font-weight: bold
    
p
    margin-top: 0
    margin-bottom: 1rem
    
ol, ul, li
    list-style-type: none
    padding: 0
    margin: 0
    -webkit-margin-start: 0rem
    -webkit-margin-end: 0rem
    -webkit-margin-before: 0rem
    -webkit-margin-after: 0rem
    
input,
button,
select,
textarea
    margin: 0
    border-radius: 0
    
input, select, button
    &:focus
        outline: 0

.showing
    opacity: 0
    transition: opacity .3s ease-in-out

.hide
    opacity: 0
    transition: opacity .3s ease-in-out

.hidden
    display: none !important
    
.clearfix 
    display: inline-block

    &:after
        visibility: hidden
        display: block
        font-size: 0
        content: " "
        clear: both
        height: 0
    
* html .clearfix
    height: 1%

.clearfix 
    display: block
    
.border
    height: .25rem
    width: 5rem
    background: #444
    margin: 2rem 0 2.5rem

@keyframes blink {
    0% {
        opacity:1;
    }
    50% {
        opacity:.4;
    }
    100% {
        opacity:1;
    }
}
