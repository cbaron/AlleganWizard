.Header
    display: flex
    align-items: center
    height: 4rem
    background-color: #fff
    left: 0
    top: 0
    position: fixed
    width: 100%
    box-shadow: 0px 1px 10px #bbb

    .contact
        flex: 1
        padding-left: 3rem
        display: inline-block
    
    ul 
        display: flex
        justify-content: flex-end
        align-items: center
        padding-right: 1rem

        >li
            color: $DarkOrange
            font-size: .95rem
            padding: .5rem .75rem
            font-weight: bold
            text-transform: uppercase
            cursor: pointer
            letter-spacing: .5px
            border-radius: .5rem
                        
            &:hover
                color: #fff
                background-color: $DarkOrange
                transition: background-color .3s
                
                
            


